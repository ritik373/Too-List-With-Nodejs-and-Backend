              <th scope="col">Quantity</th>
            

            </tr>
          </thead>
          <tbody>
        
          
          {{#each arrays}}
            <tr>
              <th scope="row">{{this.sno}}</th>
              <td>{{this.candyname}}</td>
              <td>{{this.price}}</td>
